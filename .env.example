# FollowUp Boss - Environment Variables Configuration
# Copy this file to .env and fill in your real credentials

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=followup-boss@yourdomain.com
SMTP_USE_TLS=true

# WhatsApp Configuration (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_WHATSAPP=whatsapp:+14155238886

# Default Recipients (optional)
DEFAULT_NOTIFY_EMAIL=ops@example.com
DEFAULT_NOTIFY_WHATSAPP=+1234567890

# Notification Mode (set to false for real notifications)
NOTIFICATION_DRY_RUN=false