# FollowUp Boss - Environment Variables Configuration
# Copy this file to .env and fill in your real credentials

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Resend API (Primary Email Service - Recommended for Production)
# Sign up at https://resend.com (100 free emails/day)
RESEND_API_KEY=re_YourResendAPIKeyHere
EMAIL_FROM=project14281428@gmail.com

# SMTP Configuration (Fallback Email Service)
# Works locally and on some hosting platforms (blocked on Render free tier)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=followup-boss@yourdomain.com
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Default Recipients (optional)
DEFAULT_NOTIFY_EMAIL=ops@example.com

# Notification Mode (set to false for real notifications)
NOTIFICATION_DRY_RUN=false

# =============================================================================
# DATABASE CONFIGURATION (Production)
# =============================================================================

# PostgreSQL Database URL (provided by Render/Heroku/Railway)
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# SECURITY
# =============================================================================

# Secret Key for Flask sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# SECRET_KEY=your-secret-key-here